<body>
    <div class="grid-container">
        <div class="grid-item item1">
            <h3>RECENT TRANSACTIONS</h3>
        </div>
        <div class="grid-item item2">
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Email" />
            </div>
            <button type="button" class="btn-outline-secondary">
                Invite
            </button>
        </div>
        <div class="grid-item item3">
            <div class="input-group mb-3">
                <span class="input-group-text">£</span>
                <input type="text" class="form-control" placeholder="Amount" aria-label="£" />
            </div>
            <button type="button" class="btn-outline-secondary">
                Add Funds
            </button>
        </div>
        <div class="grid-item item4">
            <h3>Welcome {{user.name}}<br><br>
                ACCOUNT BALANCE: £{{user.balance}}</h3>
        </div>
        <div class="grid-item item5">

            <div>
                <h3 align="center">My Friends</h3>
                <div align="center" class="float-left">
                    <select class="form-select" aria-label="Default select example" style="margin: 0px 10px;">
                        {{#each friends}}
                        <option selected>Pick a friend</option>
                        <option value="1">{{this.email}}</option>
                        {{/each}}
                    </select>
                </div>
                <div align="center" class="float-left">
                    <div class="input-group mb-3" style="margin: 0px 10px;">
                        <input type="text" class="form-control" placeholder="Amount" aria-label="£" />
                    </div>
                </div>
                <div align="center" class="float-left">
                    <button type="button" class="btn-outline-secondary" style="margin: 0px 10px;">
                        Send Money
                    </button>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
        crossorigin="anonymous"></script>
</body>